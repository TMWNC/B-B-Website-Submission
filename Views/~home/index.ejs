  ////////////////////////////////////////////////////////
  -->
  <%- include('../Partials/head') %>

  <body>
    <!-- 
    ////////////////////////////////////////////////////////
    ////// Global Banner - top navigation + branding   /////
    ////////////////////////////////////////////////////////
    -->
    <%- include('../Partials/banner') %>

    <!-- 
    ////////////////////////////////////////////////////////
    ////// Search Section - main holiday search bar     /////
    ////////////////////////////////////////////////////////
    -->
